{
  "author": "IntelliFactory",
  "classifications": [ "Bolero", "Web", "Blazor" ],
  "name": "Bolero Hosted Application",
  "tags": {
    "language": "F#",
    "type": "project"
  },
  "identity": "Bolero.Application.Template",
  "groupIdentity": "Bolero",
  "shortName": "bolero-app",
  "sourceName": "Bolero.Template",
  "preferNameDirectory": true,
  "symbols": {
    "server": {
      "type": "parameter",
      "isRequired": false,
      "description": "Whether to include an ASP.NET Core server-side host",
      "choices": [
        {
          "choice": "true",
          "description": "Include an ASP.NET Core server-side host"
        },
        {
          "choice": "false",
          "description": "Do not include an ASP.NET Core server-side host"
        }
      ],
      "defaultValue": "true"
    },
    "hotreload": {
      "type": "parameter",
      "isRequired": false,
      "description": "Whether to include hot reload for HTML templates (true requires server=true)",
      "choices": [
        {
          "choice": "true",
          "description": "Include hot reload for HTML templates"
        },
        {
          "choice": "false",
          "description": "Do not include hot reload for HTML templates"
        }
      ],
      "defaultValue": "true"
    },
    "hotreload_actual": {
      "type": "computed",
      "value": "(hotreload == \"true\" && server == \"true\")"
    }
  },
  "sources": [
    {
      "exclude": [
        "Bolero.Template.sln",
        "paket.dependencies",
        "paket.lock",
        "noserver/**/*",
        "src/Bolero.Template.Client/*.html",
        "src/Bolero.Template.Server/**/*",
        "**/.template.config/**/*"
      ],
      "modifiers": [
        {
          "condition": "(server == \"true\")",
          "include": [
            "src/Bolero.Template.Server/**/*",
            "Bolero.Template.sln",
            "paket.dependencies",
            "paket.lock"
          ]
        },
        {
          "condition": "(server == \"false\")",
          "include": [
            "noserver/Bolero.Template.sln",
            "noserver/paket.dependencies",
            "noserver/paket.lock"
          ],
          "rename": {
            "noserver/Bolero.Template.sln": "Bolero.Template.sln",
            "noserver/paket.dependencies": "paket.dependencies",
            "noserver/paket.lock": "paket.lock"
          }
        },
        {
          "condition": "(hotreload == \"true\")",
          "include": [
            "src/Bolero.Template.Client/*.html"
          ]
        }
      ]
    }
  ],
  "SpecialCustomOperations": {
    "*": {
      "flagPrefix": "//#",
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [ "//#if" ],
            "else": [ "//#else" ],
            "elseif": [ "//#elseif" ],
            "endif": [ "//#endif" ],
            "true": true,
            "wholeLine": true,
            "evaluator": "C++"
          }
        }
      ]
    }
  }
}
